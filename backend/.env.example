# Sift Retail AI - Backend Environment Variables
# Copy this to .env and fill in your values

# Debug mode
DEBUG=false

# OpenAI - Required for embeddings and chat
OPENAI_API_KEY=sk-your-openai-api-key

# Qdrant Cloud - Vector database for semantic search
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key

# Supabase - Relational database for products and analytics
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# WooCommerce - Default store (Van Leeuwen Ice Cream)
WOOCOMMERCE_URL=https://vanleeuwenicecream.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret
